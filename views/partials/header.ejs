<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Document</title>
  <link rel="stylesheet" href="/styles.css">
</head>
<body>
  <nav>
    <h1><a href="/">header menu</a></h1>
    <ul>
        <% if (user) { %>
            <li>Welcome, <span id='user'><%= user.email %></span></li>
            <li><a href="/logout">Log out</a></li>
        <% } else { %>
            <li><a href="/login">Log in</a></li>
            <li><a href="/signup" class='btn'>Sign up</a></li>
            <!--h1><a id='ps'>Post signup</a></h1>
            <h1><a id='pl'>Post login</a></h1-->
        <% } %>
    </ul>
  </nav>
  <!--script src="/script.js"></script-->
<script>
    
    document.querySelector('#user').onclick = async () => {
        try {
            const response = await fetch('/info', {
                method: 'GET',
            });
            const result = await response.json();
            console.log('/Info Успех:', result);
        } catch (error) {
            console.error('/Info oшибка:', error);
        }

    }
</script>
